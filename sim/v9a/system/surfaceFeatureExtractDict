FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      surfaceFeatureExtractDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

geometry
{
    blade
    {
        type triSurfaceMesh;
        file "blade.stl";
    }
}

extractFeatures
{
    blade
    {
        // Feature angle defines which edges are sharp
        // 30–60° is common for blades
        featureAngle 30;
    }
}

// Output options
writeObj true;

