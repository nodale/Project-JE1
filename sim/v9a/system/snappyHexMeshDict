FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      snappyHexMeshDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

castellatedMesh true;
snap            true;
addLayers       true;

geometry
{
    blade
    {
        type triSurfaceMesh;
        file "blade.stl";
    }
};

castellatedMeshControls
{
    maxLocalCells 2000000;
    maxGlobalCells 30000000;
    minRefinementCells 10;
    nCellsBetweenLevels 2;

    // Refinement region: blade surface
    features
    (
//        {
//            file "blade.eMesh";
//            level 2;   // feature refinement level
//        }
    );

    refinementSurfaces
    {
        blade
        {
            level (2 4); // min max refinement
        }
    }

    resolveFeatureAngle 45;
    
    // Optional: refinement box around blade
    refinementRegions
    {
        outerCylinder
        {
            mode inside;
            levels ((2 3));
        }
    }

    locationInMesh (0.032 0.032 0.00); // point inside domain
    allowFreeStandingZoneFaces false;
};

snapControls
{
    nSmoothPatch 20;
    tolerance 1e-4;
    nSolveIter 30;
    nRelaxIter 10;
    nFeatureSnapIter 10;
    implicitFeatureSnap true;
    explicitFeatureSnap true;
}

addLayersControls
{
    relativeSizes true;
    layers
    {
        "blade.*"
        {
            nSurfaceLayers 4;        // more layers on blade
        }
    }
    expansionRatio 1.0;
    finalLayerThickness 0.002;      // thinner layer to improve concave cells
    minThickness 0.001;
    nGrow 1;                         // slightly grow mesh around features
    featureAngle 40;                 // catch sharper angles
    nRelaxIter 10;
    nSmoothSurfaceNormals 6;
    nSmoothNormals 10;
    nSmoothThickness 10;
    maxFaceThicknessRatio 0.4;
    maxThicknessToMedialRatio 0.25;
    minMedialAxisAngle 80;
    nBufferCellsNoExtrude 2;         // prevents under-resolved cells
    nLayerIter 100; 
}

meshQualityControls
{
    maxNonOrtho 60;                  // stricter to avoid bad cells
    maxBoundarySkewness 15;
    maxInternalSkewness 3;
    maxConcave 75;
    minVol 1e-12;                    // relax minimum volume slightly
    minTetQuality 0.1;                // ensure positive tets
    minArea 1e-10;
    minTwist 0.01;
    minDeterminant 0.005;            // stricter determinant
    minFaceWeight 0.1;
    minVolRatio 0.05;
    minTriangleTwist -1;
    nSmoothScale 6;
    errorReduction 0.5;
    relaxed
    {
        maxNonOrtho 70;
    }
}

mergeTolerance 1e-7; 
